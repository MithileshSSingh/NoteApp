<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basicmvp.notes">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.screen_main.NoteListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".mvp.screen_add_notes.AddNoteActivity"
            android:label="@string/add_note"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mvp.screen_detail_notes.DetailNoteActivity"
            android:label="@string/detail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.screen_edit_notes.EditNoteActivity"
            android:label="@string/edit"
            android:screenOrientation="portrait" />
    </application>

</manifest>